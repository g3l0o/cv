<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="job"
            type="com.roger.cv.model.Job" />
        <variable
            name="clickListener"
            type="com.roger.cv.view.JobClickListener" />
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_company"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:onClick="@{clickListener::onJobClicked}"
            android:elevation="4dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/text_jobId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@{String.valueOf(job.uuid)}"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/image_company_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:circularImageUrl="@{job.logo}"
                    tools:src="@drawable/ic_work" />

                <ImageButton
                    android:id="@+id/imagebutton_view_more"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_more"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/text_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="bold"
                    style="@style/subtitleText"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:text="@string/current"/>

                <TextView
                    android:id="@+id/text_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/text_current"
                    android:layout_toEndOf="@+id/image_company_logo"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    style="@style/titleText"
                    android:text="@{job.name}"
                    tools:text="Empresa"/>

                <TextView
                    android:id="@+id/text_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_company_name"
                    android:layout_toStartOf="@id/text_current"
                    android:layout_toEndOf="@+id/image_company_logo"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    style="@style/subtitleText"
                    android:text="@{job.jobPosition}"
                    tools:text="Position" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divider"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="5dp"
            android:textColor="@color/colorSecondary_text"
            android:textSize="15sp"
            android:visibility="gone"
            tools:text="@tools:sample/lorem/random" />

    </LinearLayout>
</layout>
    
