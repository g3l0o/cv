                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="16dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
